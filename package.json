{
  "author": "Bozhidar Rusalinov",
  "name": "polkadot-api-server-actionhero-b",
  "description": "api server for polkadot",
  "version": "0.1.0",
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "@polkadot/api": "^6.3.1",
    "actionhero": "27.1.5",
    "axios": "^0.23.0",
    "ioredis": "latest",
    "ioredis-mock": "latest",
    "pg": "^8.7.1",
    "swagger-ui-express": "^4.1.6",
    "ts-jest": "latest",
    "ts-node-dev": "latest",
    "typescript": "latest",
    "winston": "latest",
    "ws": "latest"
  },
  "devDependencies": {
    "@types/jest": "latest",
    "@types/node": "latest",
    "jest": "^27.3.1",
    "jest-openapi": "^0.14.1",
    "prettier": "latest",
    "ts-jest": "latest",
    "ts-node-dev": "latest",
    "typescript": "latest"
  },
  "scripts": {
    "postinstall": "npm run build",
    "dev": "ts-node-dev --no-deps --transpile-only ./src/server",
    "debug": "tsc && ts-node-dev --transpile-only --no-deps --inspect -- ./src/server ",
    "start": "node ./dist/server.js",
    "actionhero": "actionhero",
    "test": "jest",
    "tests": "jest",
    "pretest": "npm run build && npm run lint",
    "build": "tsc --sourceMap false --declaration",
    "lint": "prettier --check src/*/** __tests__/*/**",
    "pretty": "prettier --write src/*/** __tests__/*/**"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  }
}
